<resources
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<style name="EqMenu" parent="EqMenuBase">
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:layout_marginBottom">@dimen/EqMenu_marginBottom</item>
		<item name="layout_attachBottom">parent</item>
		<item name="layout_attachLeft">@+id/eq_knobs_layout</item>
		<item name="layout_attachRight">@null</item>
		<item name="popupExpandDirection">top|left</item>
		<item name="keepLayoutForPopup">true</item><!-- We need this as preset is attached to this in land -->
	</style>
	<style name="EqMenu_scene_item_menu" parent="TopMetaInfo_scene_item_menu">
		<item name="android:layout_width">0dp</item>
		<item name="layout_widthPercent">65%</item><!-- This is related to the non-consumed width -->
		<item name="layout_maxWidth">300dp</item>
	</style>

</resources>