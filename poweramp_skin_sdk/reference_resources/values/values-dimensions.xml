<resources>
	<!-- NOTE: the dynamic dimensions defined here can be used in FastLayout and in the derived layouts via:
	     - layout_widthRef/layout_heightRef
	     - layout_margin[Left|Top|Right|Bottom]Ref
	     - ListSubstyle aaMargin[Left|TopRight|Bottom]

	     The dimensions are calculated by the code based on theme/dimen values, eleminating the need of
	     multiple value definitions based on screen size/android version/skin options/etc.
	-->

	<!-- Calculated as: ?navbar_marginB + @dimen/Navbar_height -->
	<item type="id" name="navbar_bounds_size"/>

	<!-- Calculated as: ?navbar_marginB + ?navbar_marginT + @dimen/Navbar_height * 2 + @dimen/NavbarList_marginBottom -->
	<item type="id" name="navbar_bounds_2lines_size"/>

	<!-- Calculated as: ?navbar_marginB + ?navbar_marginB + @dimen/Navbar_height * 2 + @dimen/NavbarList_marginBottom * 2 + @dimen/NavbarSeekbar_height -->
	<item type="id" name="navbar_bounds_3lines_size"/>

	<item type="id" name="Alt_TopAABounds_marginBottom_plus_8dp"/>
</resources>