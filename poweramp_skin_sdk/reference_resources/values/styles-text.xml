<resources 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<!-- NOTE: @style/TextAppearance.AppCompat is android:TextAppearance.Material -->

	<!-- Used in dialog content -->
	<style name="HeadText" parent="TextAppearance.AppCompat">
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textSize">@dimen/HeadText_size</item>
	</style>

	<!-- Used in dialog content -->
	<style name="SubheadText" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/SubheadText_size</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>
	
	<!-- Used in dialog content -->
	<style name="Text" parent="TextAppearance.AppCompat">
		<!-- sp -->
		<item name="android:textSize">@dimen/Text_size</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	
	<!-- Currently, music folder selection text -->
	<style name="LargerText" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/LargerText_size</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	
	<!-- Used in dialog content -->
	<style name="AccentedText" parent="Text">
		<!-- sp -->
		<item name="android:textColor">?android:colorAccent</item>
	</style>
	
	<!-- Used in dialog content, directly used by settings -->
	<style name="Hint" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/Hint_size</item>
		<item name="android:textColor">?android:textColorTertiary</item>
	</style>

	<style name="SmallerSearchEditText_Text" parent="TextAppearance.AppCompat.Medium.Inverse">
		<item name="android:textSize">@dimen/SmallerSearchEditText_Text_size</item>
	</style>


	<!-- See also styles-*.xml for specific *Text styles -->

</resources>