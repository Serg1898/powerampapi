<!-- NOTE: almost same as merge_item_popup_menu, but has no actual spacer and different ItemTextPopupMenuItemsLayout style -->
<merge 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<!-- NOTE: popup menu item view is detached from list and attached to @id/menu_placeholder -->
	<!-- NOTE: defines scene params for the item which is detached from list and attached to menu_placeholder -->
	<!-- NOTE: PopupMenuHelper creates "returning" scene params programatically as needed to match the initial item position -->
	<SceneParams w:forId="parent" w:scene="@+id/scene_item_menu" w:scene_2="@+id/scene_item_menu_lu"
		style="?ItemPopupMenu_scene_item_menu"
	/>

	<com.maxmpz.widget.base.InvisibleView android:id="@+id/spacer"
		style="?ItemTextPopupMenuTopSpacer"
	/>
			
	<!-- NOTE: this is usually attached to aa_image, but for item_text + scene_top_header, there may be no visible aa_image, thus
		 layout_attachToParrentIfGone="true" is used to attach to parent. item_text title consumes space in item_text, so separator is properly positioned below.
	 -->
	<com.maxmpz.widget.base.FastLayout android:id="@+id/menu_items"
		style="?ItemTextPopupMenuItemsLayout"
	>
		<com.maxmpz.widget.base.NonOverlappingView android:id="@+id/separator"
			style="?ItemPopupMenuSeparator"
		/>
			
	</com.maxmpz.widget.base.FastLayout>		
	<!-- NOTE: SceneParams is also needed so menu LinearLayout is tracked/animated vs jumping around --> 
	<SceneParams w:scene="@+id/scene_aa" w:scene_2="@+id/scene_header" w:scene_3="@+id/scene_top_header" w:scene_4="@+id/scene_aa_vis"
										w:scene_5="@+id/scene_aa_playing" w:scene_6="@+id/scene_header_1"
		android:visibility="invisible"
		w:recalcChildren="on_start"
	/>
	<SceneParams w:scene="@+id/scene_grid" w:scene_2="@+id/scene_search_header" w:scene_3="@+id/scene_bottom_toolbar" w:scene_4="@+id/scene_top_header"
		android:visibility="invisible"
		w:recalcChildren="on_start"
	/>
	<SceneParams w:scene="@id/_tag_scene_zero"
		android:visibility="invisible"
		w:recalcChildren="on_end"
	/>
	<SceneParams w:scene="@id/scene_item_menu" w:scene_2="@+id/scene_item_menu_lu"
		android:visibility="visible"
		w:recalcChildren="on_start"
	/>
	<SceneParams w:scene="@+id/scene_bottom_toolbar"
		android:visibility="gone"
		/>

</merge>
